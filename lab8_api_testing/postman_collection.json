					"script": {
						"exec": [
							"// check for a successful 200 OK status\r",
							"pm.test(\"Status code is 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// check if the response is JSON\r",
							"pm.test(\"Response is valid JSON\", function () {\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"// check that the response is an array\r",
							"pm.test(\"Response body is an array\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.be.an('array');\r",
							"});\r",
							"\r",
							"// check is the array is not empty\r",
							"pm.test(\"Books array is not empty\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData).to.not.be.empty;\r",
							"});\r",
							"\r",
							"// check the structure of the first book\r",
							"pm.test(\"First book has 'id' and 'title' properties\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    // the array has at least one item before testing it\r",
							"    if (jsonData.length > 0) {\r",
							"        let firstBook = jsonData[0];\r",
							"        pm.expect(firstBook).to.have.property('id');\r",
							"        pm.expect(firstBook).to.have.property('title');\r",
							"        // You could even check the data type\r",
							"        pm.expect(firstBook.title).to.be.a('string');\r",
							"    }\r",
							"});"
